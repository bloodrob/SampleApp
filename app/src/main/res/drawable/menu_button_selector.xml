<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_focused="true"
        android:state_pressed="true">
            <shape
                android:shape="rectangle">

                <gradient
                    android:angle="45"
                    android:endColor="#ffdab9"
                    android:startColor="#ffdab9"
                    android:type="linear">
                </gradient>

                <corners
                    android:radius="25dp"/>
            </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">

            <gradient
                android:angle="45"
                android:endColor="#07648F"
                android:startColor="#03A9F4"
                android:type="linear">
            </gradient>

            <corners
                android:radius="25dp"/>
        </shape>
    </item>
</selector>