<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SampleOne">

    /*horizontal scroll of button*/
    <HorizontalScrollView
        android:id="@+id/hori_scorl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="1dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/cat1_btn_frag_sample_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_button_selector"
                android:text="cat1"/>

            <Button
                android:id="@+id/cat2_btn_frag_sample_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/menu_button_selector"
                android:text="cat2" />
            <Button
                android:id="@+id/cat3_btn_frag_sample_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_button_selector"
                android:layout_marginLeft="10dp"
                android:text="cat3"/>
            <Button
                android:id="@+id/cat4_btn_frag_sample_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_button_selector"
                android:layout_marginLeft="10dp"
                android:text="cat4"/>

        </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/sampleOne_tabLlout"
        android:layout_below="@+id/hori_scorl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="For The Tab Fragment"/>
        <TextView
            android:id="@+id/sampleText_fragment_sample_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textSize="19sp"
            android:textStyle="bold"
            android:background="#f1f1ff"
            android:text="1st Tab Fragment without being button click"
            android:gravity="center" />
    </LinearLayout>

</RelativeLayout>